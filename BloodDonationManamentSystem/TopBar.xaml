<Page x:Class="BloodDonationManamentSystem.TopBar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BloodDonationManamentSystem"
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="1000"
      Title="TopBar">

    <Grid Background="White">
        <Label Content="Blood Donation Management System" HorizontalAlignment="Left" Margin="19,0,0,0" VerticalAlignment="Center" FontSize="36" FontWeight="Bold"/>
        <Button x:Name="btnLogout" Content="Log Out" HorizontalAlignment="Left" Margin="890,59,0,0" VerticalAlignment="Top" FontSize="20" Width="100" Click="btnLogout_Click"/>
        <Label x:Name="lblUser" Content="Logged in as : Account Name" Margin="771,23,12,0" VerticalAlignment="Top" FontSize="16"/>
        <Button x:Name="btnEdit" Content="Edit Profile" HorizontalAlignment="Left" Margin="782,59,0,0" VerticalAlignment="Top" FontSize="20" Width="100" Click="btnEdit_Click"/>

    </Grid>
</Page>
