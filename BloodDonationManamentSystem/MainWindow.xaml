<Window x:Class="BloodDonationManamentSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BloodDonationManamentSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Canvas x:Name="mainGrid" Width="1280" Height="700">
        <Frame x:Name="mainFrame" Content="Frame" Height="700" Panel.ZIndex="1" Navigated="mainFrame_Navigated" Width="1280"/>
        <Frame x:Name="navigationFrame" Content="Frame" Margin="0,0,1000,0" Width="280"/>
        <Frame x:Name="contentFrame" Content="Frame" Width="1000" Margin="280,100,0,0" Height="600"/>

    </Canvas>
</Window>
