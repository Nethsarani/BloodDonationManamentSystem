        <Button x:Name="btnBank" Content="Blood Bank" HorizontalAlignment="Center" Margin="0,475,0,0" VerticalAlignment="Top" Height="100" Width="350" FontSize="48" Click="btnBank_Click"/>
        <Label Content="WELCOME" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="100"/>
        <Label Content="Blood Donation Management System" HorizontalAlignment="Center" Margin="0,130,0,0" VerticalAlignment="Top" FontSize="48"/>
        <Label Content="You are" HorizontalAlignment="Center" Margin="0,250,0,0" VerticalAlignment="Top" FontSize="36"/>

    </Grid>
