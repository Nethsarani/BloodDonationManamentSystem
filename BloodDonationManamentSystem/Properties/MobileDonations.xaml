<Page x:Class="BloodDonationManamentSystem.Properties.MobileDonations"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BloodDonationManamentSystem.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="1278
      
      
      " d:DesignWidth="720
      "
      Title="MobileDonations" Width="720" Height="1278" Background="Black" Foreground="#FFFFF9F9">

    <Grid Background="#FFFDF9F9">
        <Label Content="Past Donations" HorizontalAlignment="Left" Margin="190,150,0,0" VerticalAlignment="Top" FontSize="48"/>
        <Rectangle HorizontalAlignment="Center" Height="100" Stroke="Black" VerticalAlignment="Top" Width="720" Fill="#FFB4EA80"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="60,300,60,142" AutoGenerateColumns="False" MinColumnWidth="170" SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="150"/>
                <DataGridTextColumn/>
                <DataGridTextColumn Header="Location" Width="450"/>
                <DataGridTextColumn Header="Amount"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
